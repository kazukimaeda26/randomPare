
<div class="container p-3">
  <h1 class="text-dark header">ペア組あぷり</h1>
  <div class="row">
    <div class="col md-6">
      <p>朝礼時のテーマ</p>
      <%= @now %>
    </div>
    <div class="col md-6">
      <p>夕礼時のテーマ</p>
    </div>
  </div>
  <div class="row">
    <div class="col md-6 card border-primary" id="form-wrap">
      <div class="paragraph pt-3 text-primary">参加者を記入！</div>
      <form>
        <input type="text" class="form-control w-100" id="register-name" required>
        <input type="submit" value="登録" class="form-control w-100 btn btn-outline-primary" id="submit">
      </form>
    </div>
    <div class="col md-6 card border-info" id="registers-wrap">
      <p class="paragraph pt-3 text-info">参加者一覧</p>
    </div>
  </div>
  <div class="p-3 w-50" id="register-btn-wrap">
  </div>
  <div class="p-3 w-100" id="rooms-wrap">
  </div>
</div>
